{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build UX Installer",
			"type": "shell",
			"command": "makensis",
			"args": [
				"${workspaceFolder}/installer/Installer-UX.nsi"
			],
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": []
		},
		{
			"label": "Clean Local Environment",
			"type": "shell",
			"command": "cmd",
			"args": [
				"/c",
				"conda deactivate & rmdir /s /q \"%LOCALAPPDATA%\\RAUX\" & conda env remove -n raux_env -y"
			],
			"presentation": {
				"reveal": "silent",
				"panel": "new",
			},
			"problemMatcher": []
		}
	]
}